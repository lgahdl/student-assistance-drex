{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/generated": ["./generated"]
    }
  },
  "include": [
    "src/**/*",
    "ponder.config.ts",
    "ponder.schema.ts",
    "generated/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 